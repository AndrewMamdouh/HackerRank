{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@ProblemSolving/Algorithms/*": ["Problem Solving/Algorithms/*"],
            "@Helpers": ["helpers.ts"],
            "@Types": ["types.ts"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["docs", "**/*.test.ts"]
}
